@model Getri_FinalProject_MVC_API.ViewModel.VMLoginViewModel;
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<html>
<head>
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="email" placeholder="Email" asp-for="Email" />
        <input type="password" placeholder="PassWord" asp-for="Password" />
        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged In
        </label>
        <button type="submit">Login</button>

        @if (ViewData["ValidationMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidationMessage"]</label>
        }
    </form>
</body>
</html>